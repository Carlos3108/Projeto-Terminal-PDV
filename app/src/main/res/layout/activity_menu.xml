<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/additem"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginTop="211dp"
        android:layout_marginBottom="31dp"
        android:text="Adicionar Itens"
        app:layout_constraintBottom_toTopOf="@+id/searchitem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchitem"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="63dp"
        android:text="Pesquisar Comanda"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additem" />

    <Button
        android:id="@+id/exit"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginBottom="186dp"
        android:text="Sair"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchitem" />
</androidx.constraintlayout.widget.ConstraintLayout>